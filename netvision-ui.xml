                        </textarea>
                    </group>

                </state>

                <state name="selectedactive" from="selectedinactive">
                    <statetype name="status" from="itemsSelectedState" />
                </state>
            </statetype>
        </buttonlist>
    </window>

    <!-- Home -> Media Library -> Browse Internet Video -> 'M'
         -> "Change View" -> "Switch to Gallery View"
