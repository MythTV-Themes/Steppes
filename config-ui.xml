                <button name="next" from="varbuttonleft">
                    <area>100%-285,0,250,100%</area>
                    <value>Next</value>
                </button>
            </group>
        </group>
    </window>

    <!-- Home -> Setup -> Setup Wizard -> Next -> Next
    -->
